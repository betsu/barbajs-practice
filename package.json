{
	"name": "barba practice",
	"browserslist": "> 0.5%, last 2 versions, not dead",
	"targets": {
		"dev": {
			"publicUrl": "/",
			"context": "browser",
			"outputFormat": "esmodule"
		},
		"build-css": {
			"publicUrl": "./",
			"distDir": "./public/barba-css",
			"sourceMap": false,
			"scopeHoist": true,
			"context": "browser",
			"outputFormat": "esmodule"
		}
	},
	"scripts": {
		"dev": "parcel \"src/**/*.html\" --no-cache --target dev",
		"build:css": "rimraf public/barba-css && parcel build \"src/barba-css/**/*.html\" --target build-css"
	},
	"devDependencies": {
		"@barba/core": "^2.9.7",
		"@barba/css": "^2.1.15",
		"@mischnic/parcel-resolver-root": "^0.4.2",
		"@parcel/transformer-sass": "^2.8.3",
		"gsap": "^3.11.4",
		"parcel": "^2.8.3",
		"parcel-namer-rewrite": "^2.0.0-rc.3",
		"parcel-reporter-clean-dist": "^1.0.4",
		"parcel-reporter-rebase": "^1.0.0",
		"rimraf": "^4.1.2",
		"sharp": "^0.31.3"
	},
	"workspaces": [
		"packages/*"
	],
	"@mischnic/parcel-resolver-root": {
		"/": "./src/"
	},
	"parcel-namer-rewrite": {
		"chain": "@parcel/namer-default",
		"hashing": "always",
		"rules": {
			"(.*\\\\)*(.*).html": "$1/$2.html",
			"(.*\\\\)*(.*).css": "css/$2{-hash}.css",
			"(.*\\\\)*(.*).(jpg|jpeg|gif|png|svg)": "assets/$2.$3",
			"(.*\\\\)*(.*).js": "js/$2{-hash}.js"
		}
	}
}
